[user]
  name = Adrian Ghizaru
  email = adrian.ghizaru@gmail.com
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[branch]
  color = always
[core]
  editor = vim
[diff]
  #external = git_diff_wrapper.sh
  color = always
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[init]
	defaultBranch = main
[merge]
  # A better vimdiff git merge tool
  # http://vim.wikia.com/wiki/A_better_Vimdiff_Git_mergetool
  tool = git_merge_vimdiff
[mergetool "git_merge_vimdiff"]
  cmd = git_merge_vimdiff.sh vim $BASE $LOCAL $REMOTE $MERGED
  trustExitCode = true
  keepBackup = false
[pager]
  diff =
  log =
[status]
  color = always

[color "branch"]
  current = green
  local = blue
  remote = yellow
[color "diff"]
  meta = magenta
  frag = blue
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = magenta
